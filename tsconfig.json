{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "out",
    "rootDir": "src",
    "removeComments": false,

    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": [
    "out/",
  ]
}
